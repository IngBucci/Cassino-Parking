<div class="pagina" style="background-image: url('img/bg-01.jpeg');">
    <div class="wrap-register">

        <div id="map"></div>

        <script type="text/javascript">

            function initMap() {
                var pos = {lat: 41.488944, lng: 13.824903};
                var myLatLng = new google.maps.LatLng(41.488944, 13.824903);
                var iconBase = 'http://maps.google.com/mapfiles/ms/micons/';
                var icon = iconBase + 'red-dot.png';


                var map = new google.maps.Map(document.getElementById('map'), {
                    zoom: 16,
                    center: myLatLng,
                    mapTypeId: google.maps.MapTypeId.ROADMAP
                });

                var marker = new google.maps.Marker({
                    position: myLatLng,
                    map: map,
                    icon: icon
                });

                var location = ['Cassino Parking', 41.488944, 13.824903];
                var infowindow = new google.maps.InfoWindow();

                google.maps.event.addListener(marker, 'click', (function (marker) {
                    return function () {
                        infowindow.setContent(location[0]);
                        infowindow.open(map, marker);
                    }
                })(marker));
            }
        </script>

        <script async defer
                src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCF74XG7tk5zbtpuVhJ3KUxP7tgk-BImDA&callback=initMap"></script>

    </div>
</div>
