<form action="/signIn" method="post">

    <div class="pagina" style="background-image: url('img/bg-01.jpeg');" >
        <div class="wrap-login">
            <div class="text-center" style="position: relative">
                <div class="form-signin">
                    <div class="mb-0">

                    </div>

                    <h1 style="color: black ">Login</h1>

                    <input type="email" class="form-control mt-5 mb-2" placeholder="Email address" name="email"
                           value="{{email}}" required autofocus>
                    <input type="password" class="form-control mb-1" placeholder="Enter Password" name="password"
                           required
                           autofocus>

                    <a class="mb-5" href="/recuperaPassword">Forgot Password?</a>

                    <button class="btn btn-lg btn-primary btn-block mt-5 mb-1" type="submit">Sign in</button>

                    <a href="/register">New here? Create an account.</a>
                </div>
            </div>
        </div>

    </div>
</form>

